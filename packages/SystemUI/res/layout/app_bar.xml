<com.android.systemui.statusbar.phone.AppBarPanelView 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/appbar_panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/notification_panel_bg"
    android:paddingTop="@dimen/notification_panel_padding_top"
    android:layout_marginLeft="@dimen/notification_panel_margin_left"
    >
        <View
        android:id="@+id/handle"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/close_handle_height"
        android:background="@drawable/status_bar_close"
        android:visibility="invisible"
        />
       <com.android.systemui.statusbar.phone.HSbar
		android:id="@+id/app_bar"
    	android:layout_gravity="center_horizontal"
    	android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_marginBottom="@dimen/close_handle_underlap"
       />
</com.android.systemui.statusbar.phone.AppBarPanelView><!-- end of sliding panel -->

