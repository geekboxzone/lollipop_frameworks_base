<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:systemui="http://schemas.android.com/apk/res/com.android.systemui"
    android:id="@+id/sim_switch_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
     android:paddingLeft="40dip"
    android:paddingTop="10dip"
    android:paddingBottom="5dip"
    android:baselineAligned="false"
    android:background="#ff434f56"
    android:orientation="horizontal"
    android:visibility="gone" >
    <LinearLayout
        android:id="@+id/sim1_container"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >
    <ImageView
            android:id="@+id/sim1_switch_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sim2_container"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >
    <ImageView
            android:id="@+id/sim2_switch_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ask_container"
        android:layout_width="0dip"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="vertical" >
    <ImageView
            android:id="@+id/ask_switch_button"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>
